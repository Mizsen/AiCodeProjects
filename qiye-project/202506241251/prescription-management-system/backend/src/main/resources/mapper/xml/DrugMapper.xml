<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.prescription.mapper.DrugMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.prescription.entity.DrugEntity">
        <id column="id" property="id" />
        <result column="drug_name" property="drugName" />
        <result column="specification" property="specification" />
        <result column="manufacturer" property="manufacturer" />
        <result column="indications" property="indications" />
        <result column="created_time" property="createdTime" />
        <result column="created_by" property="createdBy" />
        <result column="updated_time" property="updatedTime" />
        <result column="updated_by" property="updatedBy" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, drug_name, specification, manufacturer, indications, created_time, created_by, updated_time, updated_by
    </sql>

</mapper>
